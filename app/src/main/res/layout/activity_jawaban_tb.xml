<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JawabanTb"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/tebak_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/apel"
        android:background="@drawable/shape4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antic"
        android:gravity="center"
        android:text="Buah Apakah Ini..?"
        android:textSize="35sp"
        android:textStyle="bold" 
        android:layout_marginTop="10dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:padding="10dp">

        <EditText
            android:id="@+id/editText_jawab"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/shape_ori"
            android:layout_weight="1"
            android:padding="10dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonCek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cek"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/shape_ori"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/buttonSuara"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_volume"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

</LinearLayout>